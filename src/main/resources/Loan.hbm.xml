<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="data.Loan" table="loan">
        <id name="id" type="int" column="id">
            <generator class="native"></generator>
        </id>
        <property name="customerNumber" column="customerNumber" type="int"/>
        <property name="contractCost" column="contractCost" type="int"/>
        <property name="contractDuration" column="contractDuration" type="int"/>
    </class>
</hibernate-mapping>